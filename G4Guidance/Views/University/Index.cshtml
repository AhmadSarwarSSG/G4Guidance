<section class="UniversityForm">
<div class="card" id="signup">
    <form method="post" enctype="multipart/form-data"> 
        <h1 class="card-header text-center">Find University</h1>
        <div class="card-body">
            <div class="form-floating mb-3">
                <select id="type" name="type" class="form-control" onchange="getUni()">
                    <option value="All">All</option>
                    <option value="Engineering">Engineering</option>
                    <option value="Medical">Medical</option>
                </select>
                <label for="type">University Type</label>
            </div>

            <div class="form-floating mb-3">
                <input id="marks" class="form-control" type="number" placeholder="jeo@gmail.com" onchange="getUni()">
                <label for="marks">Marks</label>
            </div>
        </div>
    </form>
</div>
</section>
<section id="UniList">
    <div class="container">
        <div class="row mt-5" id="list-custom">
            @foreach(var uni in ViewBag.uni)
            {
                <div class="col-4">
                    <div class="card" style="height:100%">
                         <img class="card-img-top" src="~/@uni.pic" alt="Card image cap" width="200" height="300">
                        <div class="card-body">
                            <h5 class="card-title">@uni.Name</h5>
                            <p class="card-text">@uni.intro</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>University Type: </strong> @uni.Type</li>
                            <li class="list-group-item"><strong>Closing Merit: </strong> @uni.LastYearsMarks</li>
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
