@{
    ViewData["Title"] = "Find University";
}
@section underline_uni{
    active
}
<script>
    function getUni() {
        $.post("@Url.Action("getUniFromType", "University")", {
            uniData: $("#type").val(),
            marksData: $("#marks").val()
        },
            function(data) {
                $("#list-custom").html("");
                for (var i = 0; i < data.length; i++) {
                    $("#list-custom").append('<div class="col-4"> <div class="card" style="height:100%"><img class="card-img-top" src="'+data[i].pic+'" alt="Card image cap" width="200" height="300"><div class="card-body"><h5 class="card-title">'+data[i].name+'</h5><p class="card-text">'+data[i].intro+'</p></div><ul class="list-group list-group-flush"><li class="list-group-item"><strong>University Type: </strong> '+data[i].type+'</li><li class="list-group-item"><strong>Closing Merit: </strong> '+data[i].lastYearsMarks+'</li></ul></div></div>');
                }
            });
    };
</script>
