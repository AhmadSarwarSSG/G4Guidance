@model G4Guidance.Models.Playlist;
@{
}
@{
    ViewData["Title"] = "Edit Video";
}
@section underline_video{
    active
}
<div class="card" id="signup">
    <form asp-action="EditVideo" method="post" enctype="multipart/form-data" asp-controller="AdminPlaylist"> 
        <h1 class="card-header text-center">Edit Video</h1>
        <div class="card-body">
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" type="text" placeholder="Consoleing Video" value="@ViewBag.info.Name">
                <label asp-for="Name">Video Name</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="link" type="text" class="form-control" placeholder="youtube.com/etc"  value="@ViewBag.info.link">
                <label asp-for="link">Video Link</label>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-dark">Save</button>
            </div>
        </div>
    </form>
</div>