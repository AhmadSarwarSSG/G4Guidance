@{
}
@{
    ViewData["Title"] = "Video";
}
@section underline_video{
    active
}
<h1>Playlist</h1>
<a href="/AdminPlaylist/AddVideo"><button class="btn-success">Add</button></a>
<section id="platlistView">
    @foreach(var video in ViewBag.list)
    {
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-md-4">
                    <iframe class="embed-responsive-item"
                            src="@video.link" title="YouTube video player" frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen></iframe>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@video.Name</h5>
                        <p class="card-text">@video.link</p>
                        <a asp-route-id="@video.ID" asp-action="EditVideo" asp-controller="AdminPlaylist"><button class="btn-success">Edit</button></a><a asp-route-id="@video.ID" asp-action="DeleteVideo" asp-controller="AdminPlaylist"><button class="btn-danger">Delete</button></a>
                    </div>
                </div>
            </div>
        </div>   
    }
</section>
