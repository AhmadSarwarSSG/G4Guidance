<section class="contactus" id="contactus">
    <div class="container text-center">
        <h1 class="title"> Contact Us</h1>
        <div class="row">
            <div class="col-md-6 services">
                <div class="card contact">
                    <form action="/home/signup" method="post">
                        <div class="card-body">
                            <div class="form-floating mb-3">
                                <input asp-for="Username" class="form-control" type="text" placeholder="Joe Doe"
                                       required>
                                <label asp-for="Username">Name</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" type="text" placeholder="jeo@gmail.com"
                                       required>
                                <label asp-for="Email">Email</label>
                            </div>

                            <div class="form-floating mb-3">
                                <textarea asp-for="Password" type="" class="form-control"
                                          placeholder="Enter Password" required></textarea>
                                <label asp-for="Password">Message</label>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-dark">Send</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card contact" id="second">
                    <div class="card-body">
                        <partial name="_contactInfo" />
                        <partial name="_socialMedia" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
